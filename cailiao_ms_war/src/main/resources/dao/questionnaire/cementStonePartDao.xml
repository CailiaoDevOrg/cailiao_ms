<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whut.cailiao.war.dao.questionnaire.CementStonePartDao">

	<!-- 根据id查询 -->
	<sql id="Base_Column_List">
		id, cementStoneList, clinkerProduction, cementProduction
	</sql>
	<select id="selectCementStonePartById" parameterType="java.lang.Integer"
		resultType="CementStonePart">
		select
		<include refid="Base_Column_List" />
		from ms_tb_cementStonePart
		where id = #{id,jdbcType=INTEGER}
	</select>

	<!-- 保存表 -->
	<insert id="insertNewCementStonePart" parameterType="java.util.Map">
		insert into
		ms_tb_cementStonePart (id, cementStoneList, clinkerProduction,
		cementProduction)
		values (#{id},
		#{cementStoneList},
		#{clinkerProduction},
		#{cementProduction})
	</insert>

	<!-- 删除表 -->
	<delete id="deleteCementStonePartById" parameterType="java.lang.Integer">
		delete from
		ms_tb_cementStonePart
		where id = #{id,jdbcType=INTEGER}
	</delete>

	<!-- 更改表 -->
	<update id="updateCementStonePartItem" parameterType="java.util.Map">
		update ms_tb_cementStonePart
		<set>
			<if test="cementStoneList != null">
				cementStoneList = #{cementStoneList},
			</if>
			<if test="clinkerProduction != null">
				clinkerProduction = #{clinkerProduction},
			</if>
			<if test="cementProduction != null">
				cementProduction = #{cementProduction},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>



</mapper>